	<%= f.label :feedback_en, "Feedback EN" %>
	<%= f.text_area :feedback_en, :rows => 10 %>
</div>

<div class="field" style="float:left; margin-right:10px;">
	<%= f.label :feedback_fr, "Feedback FR" %>
	<%= f.text_area :feedback_fr, :rows => 10 %>
</div>

<div class="field">
	<%= f.label :feedback_es, "Feedback ES" %>
